<?xml version="1.0" encoding="utf-8"?>
<resources>
    
    <declare-styleable name="GroupViewItem">
        <attr name="leftImage" format="integer"/>
        <attr name="title" format="string"/>
        <attr name="rightImage" format="integer"/>
        <attr name="itemHeight" format="dimension"/>
        <attr name="isShowLeft" format="boolean"/>
        <attr name="isShowRight" format="boolean"/>
    </declare-styleable>

    <declare-styleable name="EcoGallery">
        <attr name="mygravity" format="integer" />
        <attr name="animationDuration" format="integer" />
        <attr name="unselectedAlpha" format="float" />
        <attr name="myspacing" format="dimension" />

        <!-- 选中的 Item 放大的倍数-->
        <attr name="selectedScale" format="float" />
    </declare-styleable>

    <attr name="ecoGalleryStyle" format="reference" />

    <declare-styleable name="CustomAbsSpinner">
        <attr name="entries" format="reference" />
    </declare-styleable>

    <attr name="customAbsSpinnerStyle" format="reference" />
    <declare-styleable name="drawableText">
        <attr name="leftDrawable" format="reference|integer"/>
        <attr name="rightDrawable" format="reference|integer"/>
        <attr name="topDrawable" format="reference|integer"/>
        <attr name="bottomDrawable" format="reference|integer"/>
        <attr name="drawableWidth" format="dimension"/>
        <attr name="drawableHeight" format="dimension"/>
    </declare-styleable>

    <declare-styleable name="CircleImageView">
        <attr name="border_width" format="dimension"/>
        <attr name="border_color" format="color"/>
    </declare-styleable>
</resources>