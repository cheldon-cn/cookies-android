<?xml version="1.0" encoding="utf-8"?>
<shape
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:shape="rectangle">

    <solid android:color="@android:color/white"></solid>

    <size android:height="100dp"
        android:width="100dp"></size>

    <corners android:radius="10dp"></corners>

    <padding android:bottom="12dp"
        android:left="12dp"
        android:right="12dp"
        android:top="12dp"></padding>

    <gradient android:centerX="0.5"
        android:centerY="0.5"
        android:type="radial"
        android:gradientRadius="50dp"
        android:startColor="@android:color/white"
        android:endColor="@android:color/white"></gradient>

    <stroke android:color="@android:color/holo_orange_light"
        android:width="0.1dp"/>

</shape>